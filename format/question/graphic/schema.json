{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "allOf": [
    {
      "$ref": "http://json-quiz.github.io/json-quiz/schemas/question/base/schema.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "application/x.graphic+json"
          ]
        },
        "image": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "url": {
              "type": "string"
            },
            "width": {
              "type": "number"
            },
            "height": {
              "type": "number"
            },
            "label": {
              "type": "string"
            },
            "ext": {
              "type": "string"
            }
          },
          "required": ["id", "url"]
        },
        // allOf content (une map a une collection d'area) -> definir le content area
        "areas": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          // ici shape est un "choix parmis" => oneOf default, rect, circle, poly -> definir les content circle, rect, default, poly
          "shape": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "type" : {
                "type":"string"
              },
              "coords": {
                // devraient être définies dans chaque shape
              }
            },
            "required": ["id", "type"]
          }
        },
        "solutions": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "value": {
                "type": "string"
              },
              "shape": {
                "type": "string"
              },
              "color": {
                "type": "string"
              },
              "size": {
                "type": "number"
              },
              "score": {
                "type": "number"
              },
              "feedback": {
                "type": "string"
              }
            },
            "required": ["id", "value", "shape", "size", "score"],
            "additionalProperties": false
          }
        }
      },
      "required": ["document", "coords", "width", "height"]
    }
  ]
}
