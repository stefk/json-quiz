{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "base": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "pattern": "^[^/]+/[^/]+$"
        },
        "meta": {
          "$ref": "http://json-quiz.github.io/json-quiz/schemas/metadata/schema.json"
        }
      },
      "required": ["id", "type"]
    },
    "embedded": {
      "type": "object",
      "properties": {
        "encoding": {
          "type": "string"
        },
        "data": {
          "type": "string"
        }
      },
      "required": ["data"]
    },
    "distant": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": ["url"]
    },
    "coord":{
      "type": "object",
      "properties" : {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required" : ["x", "y"]
    },
    "shape": {
      "type": "object",
      "properties": {
        "coords":{
          "type": "object",
          "minItems": 1,
          "items": {
              "$ref": "http://json-quiz.github.io/json-quiz/schemas/content/schema.json#/definitions/coord"
          }
        }
      }
    },
    "imageMap": {
      "type": "object",
      "allOf": [
        {
          "$ref": "http://json-quiz.github.io/json-quiz/schemas/content/schema.json#/definitions/distant"
        },
        {
          "properties": {
            "shape":{
              "type": "object",
               "oneOf": [
                 { "$ref": "http://json-quiz.github.io/json-quiz/schemas/content/schema.json#/definitions/circle" },
                 { "$ref": "http://json-quiz.github.io/json-quiz/schemas/content/schema.json#/definitions/rect" },
                 { "$ref": "http://json-quiz.github.io/json-quiz/schemas/content/schema.json#/definitions/poly" }
               ]
            }
          },
          "required": ["shape"]
        }
      ]
    }
  },
  "allOf": [
    {
      "$ref": "http://json-quiz.github.io/json-quiz/schemas/content/schema.json#/definitions/base"
    },
    {
      "oneOf": [
        {
          "$ref": "http://json-quiz.github.io/json-quiz/schemas/content/schema.json#/definitions/embedded"
        },
        {
          "$ref": "http://json-quiz.github.io/json-quiz/schemas/content/schema.json#/definitions/distant"
        }
      ]
    }
  ]
}
